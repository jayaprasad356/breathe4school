<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginVertical="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        tools:context=".view.HWM.Activity.PreReadActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_work_management"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp" />


                <LinearLayout
                    android:id="@+id/llProfileItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="right"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:background="@drawable/ic_notification" />

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:background="@drawable/img_profile" />

                </LinearLayout>


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_arrow_back_ios_new_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/text_gray"
                        android:fontFamily="@font/open_sans"
                        android:text="Pre-read / "
                        android:gravity="center"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_6sdp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English Chapter 1 Content"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp" />


                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/_6sdp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/mark_completed"
                    android:textAllCaps="false"
                    app:cornerRadius="@dimen/_2sdp" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="English Chapter 1 Content"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/english"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/_6sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="This section contains the first part of the Chapter 1 revision. Go over these, and incase anyone has any doubts we can discuss in class or you can ping me on chat."
                android:textColor="@color/black"
                android:textSize="@dimen/_6sdp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:orientation="horizontal">







                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_2sdp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_30sdp">


                        <ImageView
                            android:id="@+id/ivfolder1"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_centerVertical="true"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/pdf_img" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/ivfolder1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSubject1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/text_gray"
                                android:textSize="@dimen/_6sdp" />

                            <TextView
                                android:id="@+id/tvcontent1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="@string/example"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tvTime1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="10:30 AM"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/text_gray"
                                android:textSize="@dimen/_6sdp" />

                        </LinearLayout>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_toRightOf="@+id/cvPdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_2sdp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_30sdp">


                        <ImageView
                            android:id="@+id/ivfolder2"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/word_img" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/ivfolder2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSubject2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/text_gray"
                                android:textSize="@dimen/_6sdp" />

                            <TextView
                                android:id="@+id/tvcontent2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="@string/example"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tvTime2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="10:30 AM"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/text_gray"
                                android:textSize="@dimen/_6sdp" />

                        </LinearLayout>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
</layout>