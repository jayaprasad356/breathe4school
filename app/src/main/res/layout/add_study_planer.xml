<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_9sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/open_sans_bold"
        android:padding="@dimen/_2sdp"
        android:text="@string/create_study_plan"
        android:textColor="@color/black_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/study_bg"
        android:fontFamily="@font/open_sans">

        <Spinner
            android:id="@+id/spinnerSubjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center"
            android:padding="@dimen/_6sdp"
            android:spinnerMode="dropdown" >

        </Spinner>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/study_bg"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/lystarttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/spinnerST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:entries="@array/star_timings"
                    android:text="Start Time"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:padding="@dimen/_6sdp"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/down_arrow" />

            </LinearLayout>



            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2" />
            <LinearLayout
                android:id="@+id/lyendtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/spinnerET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:entries="@array/star_timings"
                    android:text="End Time"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:padding="@dimen/_6sdp"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/down_arrow" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/cbMonday"
                android:layout_width="0dp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/check_bg"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="M"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/cbTuesday"
                android:layout_width="0dp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/check_bg"
                android:button="@android:color/transparent"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="T"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/cbWednes"
                android:layout_width="0dp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/check_bg"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="W"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/cbThurs"
                android:layout_width="0dp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/check_bg"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="Th"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/cbFriday"
                android:layout_width="0dp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/check_bg"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="F"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/cbSatur"
                android:layout_width="0dp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/check_bg"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="S"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/cbSun"
                android:layout_width="0dp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/check_bg"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="Su"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/tvPlanerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/study_bg"
        android:fontFamily="@font/open_sans"
        android:gravity="start"
        android:hint="@string/study_planner_name"
        android:padding="@dimen/_6sdp"
        android:singleLine="true"
        android:textColor="@color/time_txt_col"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/study_bg"
        android:fontFamily="@font/open_sans"
        android:gravity="start"
        android:hint="@string/description"
        android:padding="@dimen/_6sdp"
        android:singleLine="true"
        android:textColor="@color/time_txt_col"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/btnCreateStudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/discard_bg"
            android:backgroundTint="@color/primary"
            android:enabled="true"
            android:fontFamily="@font/semibold"
            android:padding="@dimen/_6sdp"
            android:text="@string/create"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/btnDescardChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/discard_bg"
            android:fontFamily="@font/semibold"
            android:paddingHorizontal="@dimen/_6sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:text="@string/discard_chagnges"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btnSaveChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/discard_bg"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/semibold"
            android:paddingHorizontal="@dimen/_6sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:text="@string/save_changes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>