<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_9sdp"
        android:fontFamily="@font/open_sans_bold"
        android:padding="@dimen/_2sdp"
        android:text="@string/create_study_plan"
        android:textColor="@color/black_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/study_bg"
        android:fontFamily="@font/open_sans"
        android:gravity="start"
        android:padding="@dimen/_6sdp"
        android:singleLine="true"
        android:hint="@string/subject"
        android:textColor="@color/time_txt_col"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/study_bg"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerST"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:entries="@array/Timings"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="@dimen/_10sdp"

                android:layout_height="@dimen/_8sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/down_arrow" />

            <View
                android:layout_width="0dp"

                android:layout_height="0dp"
                android:layout_weight="2" />

            <Spinner
                android:id="@+id/spinnerET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:entries="@array/Timings"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="@dimen/_10sdp"

                android:layout_height="@dimen/_8sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/down_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/study_bg">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:entries="@array/types"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/down_arrow" />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/study_bg"
        android:fontFamily="@font/open_sans"
        android:gravity="start"
        android:padding="@dimen/_6sdp"
        android:singleLine="true"
        android:hint="@string/study_planner_name"
        android:textColor="@color/time_txt_col"
        android:textSize="12sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/study_bg"
        android:fontFamily="@font/open_sans"
        android:gravity="start"
        android:padding="@dimen/_6sdp"
        android:singleLine="true"
        android:hint="@string/description"
        android:textColor="@color/time_txt_col"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/btn_corner"
            android:enabled="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/semibold"
            android:padding="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="@string/create"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>
</LinearLayout>