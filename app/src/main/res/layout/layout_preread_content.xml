<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_2sdp"
    android:layout_marginVertical="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_10sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Homework Management ( Pre-read)"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/llProfileItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/ic_notification" />

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/img_profile" />

            </LinearLayout>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pre-read / "
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_8sdp"
                    android:drawableStart="@drawable/ic_baseline_arrow_back_ios_new_24"
                    android:drawableTint="@color/gray"
                    android:drawablePadding="@dimen/_10sdp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English Chapter 1 Content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp"
                    />




            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:padding="@dimen/_5sdp"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mark_completed"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>






        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English Chapter 1 Content"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_5sdp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/english"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/gray"
            android:layout_marginBottom="@dimen/_10sdp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This section contains the first part of the Chapter 1 revision. Go over these, and incase anyone has any doubts we can discuss in class or you can ping me on chat."
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_10sdp"
            />






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/_10sdp"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp">



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_30sdp"
                    >


                    <ImageView
                        android:id="@+id/ivfolder"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/pdf_img" />


                    <LinearLayout
                        android:layout_toRightOf="@+id/ivfolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:id="@+id/tvSubject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/_8sdp"
                            />

                        <TextView
                            android:id="@+id/tvcontent"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/instructions"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            />


                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10:30 AM"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/_8sdp"
                            />


                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                >



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    >


                    <ImageView
                        android:id="@+id/ivfolder1"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/word_img" />


                    <LinearLayout
                        android:layout_toRightOf="@+id/ivfolder1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:id="@+id/tvSubject1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/_8sdp"
                            />

                        <TextView
                            android:id="@+id/tvcontent1"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/example"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            />


                        <TextView
                            android:id="@+id/tvTime1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10:30 AM"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/_8sdp"
                            />


                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>






        </LinearLayout>




    </LinearLayout>


</RelativeLayout>