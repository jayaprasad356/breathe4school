<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        tools:context=".view.Home.Activity.ViewSummeryActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp">


                <ImageButton
                    android:id="@+id/ibBackBtn"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/ic_back_arrow" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/ibBackBtn"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/total_summery"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_15sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvSubject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/subject"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLesson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/view"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/lesson"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/three_pm"
                        android:textSize="@dimen/_8sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvLessonDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/view"
                                android:fontFamily="@font/open_sans"
                                android:text="@string/lesson_description"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/open_sans"
                                android:text="@string/sample_text"
                                android:textColor="#000A11"
                                android:textSize="@dimen/_8sdp" />

                            <TextView
                                android:id="@+id/tvDescriptionTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/view"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:fontFamily="@font/open_sans"
                                android:text="@string/relevent_link_ref"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="10"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="8sp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.2"
                                    android:background="@drawable/dot_icon"
                                    android:drawableStart="@drawable/dot_icon" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="8"
                                    android:fontFamily="@font/open_sans"
                                    android:text="@string/digital_text"
                                    android:textColor="@color/digital_text_col"
                                    android:textSize="@dimen/_8sdp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_weight="1.8"
                                    android:gravity="right"
                                    android:text="@string/view"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="10"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="8sp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.2"
                                    android:background="@drawable/dot_icon"
                                    android:drawableStart="@drawable/dot_icon" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="8"
                                    android:fontFamily="@font/open_sans"
                                    android:text="@string/digital_text"
                                    android:textColor="@color/digital_text_col"
                                    android:textSize="@dimen/_8sdp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_weight="1.8"
                                    android:gravity="right"
                                    android:text="@string/view"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvYourPolls"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/view"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:fontFamily="@font/open_sans"
                                android:text="@string/your_polls"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="10"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="8sp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.2"
                                    android:background="@drawable/dot_icon"
                                    android:drawableStart="@drawable/dot_icon" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="8"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="8"
                                        android:fontFamily="@font/open_sans"
                                        android:text="@string/polls"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_8sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_weight="8"
                                        android:fontFamily="@font/open_sans"
                                        android:text="@string/dummy_text"
                                        android:textColor="@color/digital_text_col"
                                        android:textSize="@dimen/_8sdp" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_weight="1.8"
                                    android:gravity="right"
                                    android:text="@string/view"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:layout_weight="10"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="8sp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.2"
                                    android:background="@drawable/dot_icon"
                                    android:drawableStart="@drawable/dot_icon" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="8"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="8"
                                        android:fontFamily="@font/open_sans"
                                        android:text="@string/polls_two"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_8sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_weight="8"
                                        android:fontFamily="@font/open_sans"
                                        android:text="@string/dummy_text"
                                        android:textColor="@color/digital_text_col"
                                        android:textSize="@dimen/_8sdp" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_weight="1.8"
                                    android:gravity="right"
                                    android:text="@string/view"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_weight="4.5"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tvRTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans"
                                    android:text="Your Pre-read"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />


                                <LinearLayout
                                    android:id="@+id/ll1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvRTitle"
                                    android:layout_marginTop="@dimen/_6sdp"
                                    android:layout_weight="10"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="8sp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.2"
                                        android:background="@drawable/dot_icon"
                                        android:drawableStart="@drawable/dot_icon" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="8"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_weight="8"
                                            android:fontFamily="@font/open_sans"
                                            android:text="Pre-read - 01 "
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_8sdp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:layout_weight="8"
                                            android:fontFamily="@font/open_sans"
                                            android:text="@string/dummy_text"
                                            android:textColor="@color/digital_text_col"
                                            android:textSize="@dimen/_8sdp" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_20sdp"
                                        android:layout_weight="1.8"
                                        android:gravity="right"
                                        android:text="@string/view"
                                        android:textColor="@color/primary"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvRtitle1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/ll1"
                                    android:layout_marginTop="@dimen/_6sdp"
                                    android:fontFamily="@font/open_sans"
                                    android:text="@string/your_activity"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />


                                <LinearLayout
                                    android:id="@+id/ll2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tvRtitle1"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_weight="10"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="8sp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.2"
                                        android:background="@drawable/dot_icon"
                                        android:drawableStart="@drawable/dot_icon" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="8"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_weight="8"
                                            android:fontFamily="@font/open_sans"
                                            android:text="Activity 01 "
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_8sdp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:layout_weight="8"
                                            android:fontFamily="@font/open_sans"
                                            android:text="@string/dummy_text"
                                            android:textColor="@color/digital_text_col"
                                            android:textSize="@dimen/_8sdp" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_20sdp"
                                        android:layout_weight="1.8"
                                        android:gravity="right"
                                        android:text="@string/view"
                                        android:textColor="@color/primary"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvRTitle2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/ll2"
                                    android:layout_marginTop="@dimen/_6sdp"
                                    android:fontFamily="@font/open_sans"
                                    android:text="@string/your_assessment"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvRTitle2"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_weight="10"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="8sp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.2"
                                        android:background="@drawable/dot_icon"
                                        android:drawableStart="@drawable/dot_icon" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="8"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_weight="8"
                                            android:fontFamily="@font/open_sans"
                                            android:text="Assessment 01 "
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_8sdp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:layout_weight="8"
                                            android:fontFamily="@font/open_sans"
                                            android:text="@string/dummy_text"
                                            android:textColor="@color/digital_text_col"
                                            android:textSize="@dimen/_8sdp" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_20sdp"
                                        android:layout_weight="1.8"
                                        android:gravity="right"
                                        android:text="@string/view"
                                        android:textColor="@color/primary"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>


                                <TextView
                                    android:id="@+id/btnSaveChanges"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@drawable/discard_bg"
                                    android:backgroundTint="@color/primary"
                                    android:fontFamily="@font/semibold"
                                    android:gravity="center"
                                    android:paddingHorizontal="@dimen/_6sdp"
                                    android:paddingVertical="@dimen/_6sdp"
                                    android:text="@string/take_assessment"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp" />
                            </RelativeLayout>


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </FrameLayout>
</layout>