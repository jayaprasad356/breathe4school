<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.Register.SetPasswordActivity">
    <data>
        <variable
            name="viewModel"
            type="com.app.b4s.viewmodels.PasswordViewModel" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:rotationX="360"
            android:scaleType="fitXY"
            android:src="@drawable/register_image" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageButton
                android:id="@+id/ibBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()-> viewModel.back()}"
                android:background="@drawable/ic_back_arrow"
                android:layout_margin="@dimen/_10sdp"

                />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/ivlogo"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/semibold"
                android:text="@string/set_password"
                android:textColor="@color/black_text"
                android:textSize="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>








            <com.google.android.material.textfield.TextInputLayout
                app:boxStrokeErrorColor="@color/red"
                android:id="@+id/edSetPasswordInp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="@{()-> viewModel.setPasswordInfo()}"
                android:layout_marginHorizontal="@dimen/_100sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:hint="@string/set_password"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_info"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edSetPasswordId"
                    android:layout_width="match_parent"
                    android:onTextChanged="@{(text, start, before, count) -> viewModel.onUsernameTextChanged(text,start)}"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    >

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                app:boxStrokeErrorColor="@color/red"
                android:id="@+id/edConfirmPasswordInp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_100sdp"
                android:hint="@string/confirm_password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edConfirmPasswordId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"

                    >

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tvShowPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_100sdp"
                android:text="@string/show_password"
                android:onClick="@{()-> viewModel.showPassword()}"
                android:drawableStart="@drawable/ic_password_eye"
                android:drawablePadding="@dimen/_2sdp"
                android:textColor="@color/black"
                android:enabled="true"
                android:fontFamily="sans-serif-medium"
                android:textSize="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                />


            <LinearLayout
                android:id="@+id/llinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_100sdp"
                android:weightSum="2"
                android:layout_marginBottom="@dimen/_4sdp"

                >


                <TextView
                    android:id="@+id/charcount"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/minimum_8_characters"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/AtoZ"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/one_uppercase_character"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"

                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_100sdp"
                android:weightSum="2"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textColor="@color/black"

                >


                <TextView
                    android:id="@+id/special_char"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/one_special_character"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"

                    />

                <TextView
                    android:id="@+id/atoz"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/one_lowercase_character"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"

                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_100sdp"
                android:weightSum="2"

                >


                <TextView
                    android:id="@+id/num"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/one_number"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"

                    />

                <TextView
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    />



            </LinearLayout>


            </LinearLayout>








            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:enabled="false"
                android:onClick="@{()-> viewModel.onClick()}"
                android:fontFamily="@font/semibold"
                android:padding="@dimen/_8sdp"
                android:text="@string/continue_txt"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
</layout>