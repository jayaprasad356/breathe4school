<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.Login.LoginMPinActivity">
    <data>
        <variable
            name="viewModel"
            type="com.app.b4s.viewmodels.LoginMPinViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:rotationX="360"
                android:scaleType="fitXY"
                android:src="@drawable/register_image" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageButton
                    android:id="@+id/ibBackBtn"
                    android:layout_width="wrap_content"
                    android:onClick="@{()-> viewModel.onBackPress()}"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/ic_back_arrow" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivlogo"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_14sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:fontFamily="@font/semibold"
                        android:text="@string/welcome_john_deo"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/_14sdp" />


                    <TextView
                        android:id="@+id/tvdescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="sans-serif"
                        android:text="@string/unlock_with_m_pin"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_8sdp" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/edSetMPinInp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="@dimen/_100sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:hint="Enter Pin"
                        app:boxStrokeErrorColor="@color/red"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edMPinId"
                            android:layout_width="match_parent"
                            android:onTextChanged="@{(text, start, before, count) -> viewModel.mPinTextChanged(text,start)}"
                            android:layout_height="wrap_content"
                            android:inputType="numberPassword"
                            android:maxLength="10">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnProceed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="@dimen/_100sdp"
                        android:enabled="false"
                        android:onClick="@{()-> viewModel.doLogin()}"
                        android:fontFamily="@font/semibold"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/login"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/tvForgotPin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:onClick="@{()-> viewModel.forgotPin()}"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="right"
                        android:text="@string/forgot_m_pin"
                        android:textColor="@color/text_green" />


                    <TextView
                        android:id="@+id/tvLogineithpassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="@{()-> viewModel.loginInsteadOfPassword()}"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/login_with_password_instead"
                        android:textColor="@color/dark_blue" />


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</layout>