<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.HWM.Activity.QuestionsActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp">


                <ImageButton
                    android:id="@+id/ibBackBtn"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_back_arrow" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_toRightOf="@+id/ibBackBtn"
                    android:text="Navellaru Onde Poem"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvOnReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_toRightOf="@id/tvTitle"
                    android:background="@drawable/corner_textview"
                    android:backgroundTint="#335C76"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:text="On Review"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/white"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutTotalMarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvTotalMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/tvTotalMarknum"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:text="@string/total_marks"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="#666666"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotalMarknum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutThisQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvThisQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/tvQuestionNumber"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:text="@string/this_question"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="#666666"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvQuestionNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:text="01"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:paddingHorizontal="@dimen/_6sdp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvSubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kannada | "
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvDateStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit on"
                        android:fontFamily="@font/open_sans"
                        android:textColor="#666666"
                        android:textSize="@dimen/_6sdp" />


                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 28/02/2022"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tvResult"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="@string/result"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="#666666"
                            android:textSize="@dimen/_6sdp" />

                        <TextView
                            android:id="@+id/tvMarkDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="-/-"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_6sdp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvQuestion"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="vertical"
                android:padding="@dimen/_6sdp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tvQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q1. Lorem Ipsum is simply dummy text of the printing and typesetting industry.?"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/tvQuestion"
                        android:text="5 mark"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/_6sdp"
                         />


                </RelativeLayout>
                <TextView
                    android:id="@+id/tvAnswered"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/open_sans"
                    android:layout_height="wrap_content"
                    android:text="Already Answered"
                    android:textSize="@dimen/_6sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/vidoLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/_20sdp"
                        android:visibility="gone">

                        <VideoView
                            android:id="@+id/video_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlPdfView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingVertical="@dimen/_40sdp"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingRight="@dimen/_30sdp"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/ivPdf"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/pdf_img" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/_6sdp"
                            android:layout_toRightOf="@+id/ivPdf"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tvcontent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="PDF Question"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_6sdp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlAnsPdfView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingVertical="@dimen/_40sdp"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingRight="@dimen/_30sdp"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/ivAnsPdf"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:background="@drawable/pdf_img" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/_6sdp"
                            android:layout_toRightOf="@+id/ivAnsPdf"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tvAnscontent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="PDF Answer"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_6sdp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/imageLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/answerImageLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/answerImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_uploadPdf"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">


                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_75sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:visibility="visible">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rectangle_bg" />

                                <LinearLayout
                                    android:id="@+id/LLOpenCamera"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical">


                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/upload_cam" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:fontFamily="@font/open_sans"
                                        android:text="@string/upload_your_files_here"
                                        android:textSize="@dimen/_6sdp"

                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:fontFamily="@font/open_sans_bold"
                                        android:text="@string/open_camera"
                                        android:textColor="@color/primary"
                                        android:textSize="@dimen/_6sdp"
                                        android:textStyle="bold"

                                        />


                                </LinearLayout>
                                <ImageView
                                    android:id="@+id/ivCameraSuccess"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/img_success_greentick"
                                    android:visibility="gone" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_75sdp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_6sdp"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rectangle_bg" />

                                <LinearLayout
                                    android:id="@+id/ivOpenFiles"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical">


                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/upload_doc" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/open_sans"
                                        android:gravity="center"
                                        android:text="@string/upload_your_files_here"
                                        android:textSize="@dimen/_6sdp"

                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/open_sans_bold"
                                        android:text="@string/choose_file"
                                        android:textColor="@color/primary"
                                        android:textSize="@dimen/_6sdp"
                                        android:textStyle="bold"

                                        />


                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/ivFileSuccess"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/img_success_greentick"
                                    android:visibility="gone" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>





                <LinearLayout
                    android:id="@+id/llCheckBoxes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvQuestion"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">




                    <CheckBox
                        android:id="@+id/cbFirstOpt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvCb1"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/cbFirstOpt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your answer"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/_6sdp"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tvCb2"
                            android:visibility="gone"
                            android:layout_toRightOf="@+id/cbSecondOpt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your answer"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/_6sdp"/>


                        <CheckBox
                            android:id="@+id/cbSecondOpt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:textSize="@dimen/_6sdp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            android:visibility="gone" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cbThirdOpt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/_6sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvCb3"
                            android:visibility="gone"
                            android:layout_toRightOf="@+id/cbThirdOpt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your answer"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/_6sdp"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <CheckBox
                            android:id="@+id/cbFourthOpt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/_6sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            android:visibility="gone" />
                        <TextView
                            android:id="@+id/tvCb4"
                            android:visibility="gone"
                            android:layout_toRightOf="@+id/cbFourthOpt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your answer"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/_6sdp"/>

                    </RelativeLayout>








                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/open_sans"
            android:text="Next"
            android:textAllCaps="false"
            app:backgroundTint="@color/primary" />

    </RelativeLayout>
</layout>