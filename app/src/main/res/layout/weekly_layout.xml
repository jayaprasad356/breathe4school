<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="horizontal"
        android:weightSum="7.35">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.35" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_corner"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Monday"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_corner"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Monday"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_corner"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Monday"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_corner"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Monday"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_corner"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Monday"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_corner"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Moy"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_corner"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Monday"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="7.35"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8 AM"
            android:layout_weight="0.35"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:background="@color/background_grey"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:text="LIVE SESSION"
                android:fontFamily="@font/semibold"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvSubject"
                android:fontFamily="@font/open_sans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maths"
                android:layout_below="@+id/tvTitle"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSubject">
                <ImageView
                    android:id="@+id/ivFIcon"
                    android:src="@drawable/laptop"
                    android:padding="@dimen/_4sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_height="@dimen/_20sdp"/>

                <ImageView
                    android:id="@+id/ivSIcon"
                    android:src="@drawable/laptop"
                    android:padding="@dimen/_4sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_toLeftOf="@+id/ivFIcon" />

                <ImageView
                    android:id="@+id/ivTIcon"
                    android:src="@drawable/laptop"
                    android:padding="@dimen/_4sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_toLeftOf="@+id/ivSIcon"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>