<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.HWM.Activity.ActivityOnReviewActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">


                <ImageButton
                    android:id="@+id/ibBackBtn"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_back_arrow" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/ibBackBtn"
                    android:text="Navellaru Onde Poem"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvTitle"
                    android:background="@drawable/bg_corner"
                    android:backgroundTint="@color/dark_blue"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="@string/on_review"
                    android:textColor="@color/white"

                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Kannada | "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit on"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 28/02/2022"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conduct this activity by searching other information on the internet and create a summary about th topics along with the drawings."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/_10sdp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_10sdp">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_30sdp">


                            <ImageView
                                android:id="@+id/ivfolder"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@drawable/pdf_img" />


                            <LinearLayout
                                android:layout_toRightOf="@+id/ivfolder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_centerVertical="true">

                                <TextView
                                    android:id="@+id/tvSubject"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="English"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/_8sdp" />

                                <TextView
                                    android:id="@+id/tvcontent"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/instructions"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black" />


                                <TextView
                                    android:id="@+id/tvTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="10:30 AM"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/_8sdp" />


                            </LinearLayout>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_10sdp">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_10sdp">


                            <ImageView
                                android:id="@+id/ivfolder1"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@drawable/word_img" />


                            <LinearLayout
                                android:layout_toRightOf="@+id/ivfolder1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_centerVertical="true">

                                <TextView
                                    android:id="@+id/tvSubject1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="English"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/_8sdp" />

                                <TextView
                                    android:id="@+id/tvcontent1"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/example"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black" />


                                <TextView
                                    android:id="@+id/tvTime1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="10:30 AM"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/_8sdp" />


                            </LinearLayout>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_answer"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"

                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                </androidx.recyclerview.widget.RecyclerView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Mark"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_20sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-/-"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/remark"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</layout>