<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.greymatter.app">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Breathe4School"
        tools:targetApi="31">
        <activity
            android:name=".view.Login.LoginPasswordActivity"
            android:exported="false"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".view.Login.LoginMPinActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.Login.LoginFaceIDActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SuccessfullActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.Register.SetMPinActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.Register.SetFaceIdActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.Register.SetPasswordActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.Register.OtpActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.Register.RegistrationActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
    </application>

</manifest>